<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://xmlns.jcp.org/jsf/html"
	xmlns:f="http://xmlns.jcp.org/jsf/core"
	xmlns:p="http://primefaces.org/ui"
	xmlns:ui="http://xmlns.jcp.org/jsf/facelets">

<h:head>
	<title>新建临时商品</title>
	<style type="text/css">
.ui-widget {
	font-size: 90%;
}
</style>
</h:head>

<h:body>
	<f:event listener="#{itemAction.initCreateItem}" type="preRenderComponent"></f:event>
	<h:form>
		<p:messages id="msg" showDetail="true" autoUpdate="true"
			closable="true" />
		<p:panelGrid columns="2">

			<h:outputText value="商品编号:" />
			<p:inputText value="#{itemModel.addItem.itemId}" readonly="false" />

			<h:outputText value="商品名称:" />
			<p:inputText value="#{itemModel.addItem.itemName}" />
			
			<p:outputLabel for="itemPrice" value="商品单价:" />
			<p:inputText id="itemPrice" value="#{itemModel.addItem.itemPrice}">
				<f:convertNumber partten="###,###.00" />
				<f:validateDoubleRange minimum="0.00" maximum="999999999999999.99" />
			</p:inputText>
			
			<p:outputLabel for="itemCost" value="商品成本:" />
			<p:inputText id="itemCost" value="#{itemModel.addItem.itemCost}">
				<f:convertNumber partten="###,###.00" />
				<f:validateDoubleRange minimum="0.00" maximum="999999999999999.99" />
			</p:inputText>

			<p:outputLabel value="备注:" />
			<p:inputText value="#{itemModel.addItem.comment}" />
		</p:panelGrid>
		<p:column headerText="Select Car">
			<p:commandButton value="确定" process="@form"
				actionListener="#{itemAction.closeTmpItem(itemModel.addItem)}" />
		</p:column>
	</h:form>
</h:body>
</html>
